<Page x:Class="TicTacToeWPFspiel.SpielOptionen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicTacToeWPFspiel"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="715"
        Title="TicTacToe Game | Version 1.0 | by Mullins182" Height="800" Width="715" Background="#FFF000" x:Name="Optionen">

    <Grid HorizontalAlignment="center" VerticalAlignment="center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <Label x:Name="optionsLabel" Width="250" Height="100" Content="OPTIONEN" FontSize="40" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="2" Margin="50,-200,0,0" VerticalContentAlignment="Top" HorizontalAlignment="Center"/>

        <Button x:Name="backToMain" VerticalAlignment="Bottom" HorizontalAlignment="Center" Opacity="0.70" Content="Zurück zum Game" Width="200" Height="50" BorderThickness="3" BorderBrush="Black" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" Margin="300,0,0,5" Background="OrangeRed" Foreground="Black" FontWeight="Bold" FontFamily="chiller" FontSize="30" Visibility="Visible" Click="backToMain_Click"/>

    </Grid>
</Page>
